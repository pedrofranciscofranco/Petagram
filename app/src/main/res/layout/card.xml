<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"

    >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <ImageView
            android:id="@+id/imgAnimales"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/raton"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            >

            <ImageButton
                android:id="@+id/IbHuesoblanco"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="0"
                android:layout_gravity="center_vertical"
                android:background="@drawable/huesoblanco"
                />

            <TextView
                android:id="@+id/Tvnombre"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:textSize="25sp"
                android:text="@string/nombremascota"/>

            <TextView
                android:id="@+id/Tvlike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="25sp"
                android:gravity="right"
                android:text="@string/numerodelike"/>

            <ImageView
                android:id="@+id/imgHuesoamarrillo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="0"
                android:layout_gravity="center_vertical"
                android:src="@drawable/huesoamarrillo"
                />

        </LinearLayout>





    </LinearLayout>



</androidx.cardview.widget.CardView>